<com.github.ksoichiro.android.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    android:id="@+id/scroll"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catharsis_back"
    android:fillViewport="true"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <include layout="@layout/padding" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/catharasisEvent1Ripple"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            app:mrl_rippleColor="#ffffffff">

            <TextView
                android:id="@+id/catharasisEvent1Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"

                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="20dp"
                android:text="BITS 'talkies'"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/gradient2" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/catharasisEvent2Ripple"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            app:mrl_rippleColor="#ffffffff">

            <TextView
                android:id="@+id/catharasisEvent2Text"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="20dp"
                android:text="Kaleidoscope"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/gradient2" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/catharasisEvent3Ripple"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            app:mrl_rippleColor="#ffffffff">

            <TextView
                android:id="@+id/catharasisEvent3Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"

                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="20dp"
                android:text="Slumber Party"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/gradient2" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/catharasisEvent4Ripple"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            app:mrl_rippleColor="#ffffffff">

            <TextView
                android:id="@+id/catharasisEvent4Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"

                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="20dp"
                android:text="The 48 hour movie"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </com.balysv.materialripple.MaterialRippleLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@drawable/gradient2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--     <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"

                     android:gravity="center"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/dheeraj"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:paddingLeft="0dp"
                         android:paddingTop="20dp"
                         android:text="DHEERAJ"
                         android:textColor="#ffffff"
                         android:textSize="24sp" />

                     <com.getbase.floatingactionbutton.FloatingActionButton
                         android:id="@+id/activity_detail_fab"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         fab:fab_colorNormal="#ffff000f"

                         fab:fab_colorPressed="#000000"
                         fab:fab_icon="@drawable/ic_phone_white_18dp"
                         fab:fab_size="mini" />


                 </LinearLayout>-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/syedshoeb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:text="SYED SHOEB"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/syedshoebCallFab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fab_colorNormal="#F4511E"

                    fab:fab_colorPressed="#000000"
                    fab:fab_icon="@drawable/ic_phone_white_48dp"
                    fab:fab_size="mini" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>