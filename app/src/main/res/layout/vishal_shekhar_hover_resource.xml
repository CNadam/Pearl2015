<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/animation_area1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="bottom|center"
        android:orientation="horizontal">

        <!--  <ImageView
              android:id="@+id/book_tickets1"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_marginRight="20dp"
              android:src="@drawable/ic_launcher" />

          <ImageView
              android:id="@+id/details1"
              android:layout_width="50dp"
              android:layout_height="50dp"
              android:layout_marginRight="20dp"
              android:src="@drawable/ic_launcher" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="10dp">


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/VnSbookTicketsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#F4511E"

                fab:fab_colorPressed="#000000"
                fab:fab_icon="@drawable/ic_style_white_48dp"
                fab:fab_size="mini" />

            <TextView
                android:id="@+id/VnSbookTicketsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Tickets"
                android:typeface="serif"
                android:paddingBottom="5dp"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp">


            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/VnSDetailsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#F4511E"

                fab:fab_colorPressed="#000000"
                fab:fab_icon="@drawable/ic_format_list_bulleted_white_48dp"
                fab:fab_size="mini" />

            <TextView
                android:id="@+id/VnSDetailsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Details"
                android:typeface="serif"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>